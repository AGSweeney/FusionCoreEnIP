PROJECT_NAME           = "NAU7802 ESP-IDF Driver"
PROJECT_NUMBER         = "1.0"
PROJECT_BRIEF          = "ESP-IDF driver for NAU7802 24-bit load cell amplifier"

INPUT                  = include/nau7802.h \
                         examples \
                         docs/mainpage.md

RECURSIVE              = YES
FILE_PATTERNS          = *.h *.c *.md

OUTPUT_DIRECTORY       = docs/html
GENERATE_HTML          = YES
GENERATE_LATEX         = NO

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES

HAVE_DOT               = NO
CALL_GRAPH             = NO
CALLER_GRAPH           = NO

MACRO_EXPANSION        = YES
EXPAND_AS_DEFINED      = ESP_OK ESP_ERR_INVALID_ARG

MARKDOWN_SUPPORT       = YES

